<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- PU_ClassB -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PU_ClassB"]/label</xpath>
    <value>
      <label>police uniform (class b)</label>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PU_ClassB"]/statBases</xpath>
    <value>
      <statBases>
        <MaxHitPoints>100</MaxHitPoints>
        <WorkToMake>4300</WorkToMake>
        <Mass>0.8</Mass>
        <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.46</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>3.5</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PU_ClassB"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <SocialImpact>0.05</SocialImpact>
        <SuppressionPower MayRequire="Ludeon.RimWorld.Ideology">0.1</SuppressionPower>
      </equippedStatOffsets>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PU_ClassB"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialApparel</li>
        <li>LemonSkin_Workwear</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ResearchProjectDef[defName="VAE_WorkAttire"]</xpath>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="PU_ClassB"]/recipeMaker/researchPrerequisite</xpath>
      <value>
        <researchPrerequisite>VAE_WorkAttire</researchPrerequisite>
      </value>
    </match>
  </Operation>
