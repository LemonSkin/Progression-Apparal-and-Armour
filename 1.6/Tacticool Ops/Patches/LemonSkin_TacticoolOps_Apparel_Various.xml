<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- HAWAIIAN SHIRT -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="TACTICOOL_HawaiianShirt"]/recipeMaker/skillRequirements</xpath>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_HawaiianShirt"]/statBases</xpath>
    <value>
      <statBases>
        <MaxHitPoints>100</MaxHitPoints>
        <WorkToMake>7000</WorkToMake>
        <Mass>0.3</Mass>
        <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.8</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>1</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_HawaiianShirt"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <MentalBreakThreshold>-0.1</MentalBreakThreshold>
      </equippedStatOffsets>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_HawaiianShirt"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_HawaiianShirt"]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisite>LemonSkin_Tacticool_TacticoolGear</researchPrerequisite>
    </value>
  </Operation>
  <!-- MUSCLE SHIRT -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="TACTICOOL_MuscleShirt"]/recipeMaker/skillRequirements</xpath>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_MuscleShirt"]/statBases</xpath>
    <value>
      <statBases>
        <MaxHitPoints>100</MaxHitPoints>
        <WorkToMake>1200</WorkToMake>
        <Mass>0.15</Mass>
        <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.32</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>1</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="TACTICOOL_MuscleShirt"]/equippedStatOffsets</xpath>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_MuscleShirt"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TACTICOOL_MuscleShirt"]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisite>LemonSkin_Tacticool_TacticoolGear</researchPrerequisite>
    </value>
  </Operation>
</Patch>
