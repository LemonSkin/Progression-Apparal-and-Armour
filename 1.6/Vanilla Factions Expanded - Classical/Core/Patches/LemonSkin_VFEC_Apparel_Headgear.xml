<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Legionnaire Helmet -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_LegionnaireHelmet"]/costStuffCount</xpath>
    <value>
      <costStuffCount>60</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_LegionnaireHelmet"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>11200</WorkToMake>
        <MaxHitPoints>120</MaxHitPoints>
        <Mass>2</Mass>
        <StuffEffectMultiplierArmor>0.34</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_LegionnaireHelmet"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <ShootingAccuracyPawn>-4.0</ShootingAccuracyPawn>
        <MentalBreakThreshold>-0.02</MentalBreakThreshold>
      </equippedStatOffsets>
    </value>
  </Operation>
  <!-- Centurion Helmet -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_CenturionHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
    <value>
      <Crafting>7</Crafting>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_CenturionHelmet"]/costStuffCount</xpath>
    <value>
      <costStuffCount>70</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_CenturionHelmet"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>12000</WorkToMake>
        <MaxHitPoints>140</MaxHitPoints>
        <Mass>3.5</Mass>
        <StuffEffectMultiplierArmor>0.45</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VFEC_Apparel_CenturionHelmet"]</xpath>
    <value>
      <equippedStatOffsets>
        <ShootingAccuracyPawn>-6.0</ShootingAccuracyPawn>
        <MentalBreakThreshold>-0.04</MentalBreakThreshold>
      </equippedStatOffsets>
    </value>
  </Operation>
</Patch>
