<Patch>


  <!-- Vneck_dress - v neck dress  -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Vneck_dress"]/costStuffCount</xpath>
    <value>
      <costStuffCount>85</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Vneck_dress"]/statBases</xpath>
    <value>
      <statBases>
        <MaxHitPoints>100</MaxHitPoints>
        <WorkToMake>4300</WorkToMake>
        <Mass>0.8</Mass>
        <StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.46</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>3.5</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Vneck_dress"]/equippedStatOffsets</xpath>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Vneck_dress"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_VanityApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Vneck_dress"]/recipeMaker</xpath>
  </Operation>


