<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Hauberk -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Hauberk"]/costStuffCount</xpath>
    <value>
      <costStuffCount>60</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Hauberk"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>10000</WorkToMake>
        <MaxHitPoints>150</MaxHitPoints>
        <Mass>2</Mass>
        <StuffEffectMultiplierArmor>0.56</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>4</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Hauberk"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <MoveSpeed>-0.1</MoveSpeed>
      </equippedStatOffsets>
    </value>
  </Operation>
