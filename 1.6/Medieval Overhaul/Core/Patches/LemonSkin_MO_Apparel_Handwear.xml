<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Leather Gloves -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesLeather"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>1000</WorkToMake>
        <MaxHitPoints>100</MaxHitPoints>
        <Mass>0.15</Mass>
        <StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesLeather"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
      </equippedStatOffsets>
    </value>
  </Operation>
  <!-- Splinted gloves -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesSplinted"]/recipeMaker/skillRequirements/Crafting</xpath>
    <value>
      <Crafting>5</Crafting>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesSplinted"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>4000</WorkToMake>
        <MaxHitPoints>120</MaxHitPoints>
        <Mass>1</Mass>
        <StuffEffectMultiplierArmor>0.378</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesSplinted"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
      </equippedStatOffsets>
    </value>
  </Operation>
  <!-- Plate gloves -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesPlate"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>6000</WorkToMake>
        <MaxHitPoints>140</MaxHitPoints>
        <Mass>2</Mass>
        <StuffEffectMultiplierArmor>0.438</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesPlate"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
      </equippedStatOffsets>
    </value>
  </Operation>
</Patch>
