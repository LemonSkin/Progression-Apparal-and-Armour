<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Biotech integration -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Royalty</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Headgear_ZweihandersHat"]/recipeMaker/researchPrerequisite</xpath>
          <value>
            <researchPrerequisites>
              <li>DankPyon_ProtectiveClothing</li>
              <li>NobleApparel</li>
            </researchPrerequisites>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Headgear_ZweihanderHelm"]/recipeMaker/researchPrerequisite</xpath>
          <value>
            <researchPrerequisites>
              <li>DankPyon_ChainArmor</li>
              <li>NobleApparel</li>
            </researchPrerequisites>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Zweihanders_Cuirass"]/recipeMaker/researchPrerequisite</xpath>
          <value>
            <researchPrerequisites>
              <li>PlateArmor</li>
              <li>NobleApparel</li>
            </researchPrerequisites>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Headgear_ArmetGilded"]/recipeMaker/researchPrerequisite</xpath>
          <value>
            <researchPrerequisites>
              <li>PlateArmor</li>
              <li>RoyalApparel</li>
            </researchPrerequisites>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_FullPlateGilded"]/recipeMaker/researchPrerequisite</xpath>
          <value>
            <researchPrerequisites>
              <li>PlateArmor</li>
              <li>RoyalApparel</li>
            </researchPrerequisites>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
