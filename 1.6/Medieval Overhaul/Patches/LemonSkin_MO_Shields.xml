<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Shield Base -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="DankPyon_BaseShield"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_MedievalShields</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="DankPyon_BaseShield"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
        <MeleeHitChance>-2</MeleeHitChance>
        <MeleeDodgeChance>-5</MeleeDodgeChance>
      </equippedStatOffsets>
    </value>
  </Operation>
  <!-- Round Shield -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Shield"]/recipeMaker/skillRequirements/Crafting</xpath>
    <value>
      <Crafting>4</Crafting>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_Shield"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>2600</WorkToMake>
        <MaxHitPoints>120</MaxHitPoints>
        <Mass>2.5</Mass>
        <StuffEffectMultiplierArmor>0.34</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
        <Flammability>1.0</Flammability>
      </statBases>
    </value>
  </Operation>
  <!-- Heater Shield -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldHeater"]</xpath>
    <value>
      <recipeMaker>
        <skillRequirements>
          <Crafting>6</Crafting>
        </skillRequirements>
        <researchPrerequisite>DankPyon_ChainArmor</researchPrerequisite>
      </recipeMaker>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldHeater"]/costStuffCount</xpath>
    <value>
      <costStuffCount>100</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldHeater"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>8000</WorkToMake>
        <MaxHitPoints>180</MaxHitPoints>
        <Mass>4</Mass>
        <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
        <Flammability>1.0</Flammability>
      </statBases>
    </value>
  </Operation>
  <!-- ShieldHeaterBase -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="DankPyon_ShieldHeaterBase"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>8000</WorkToMake>
        <MaxHitPoints>180</MaxHitPoints>
        <Mass>4</Mass>
        <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
        <Flammability>1.0</Flammability>
      </statBases>
    </value>
  </Operation>
  <!-- Kite Shield -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldKite"]</xpath>
    <value>
      <recipeMaker>
        <skillRequirements>
          <Crafting>8</Crafting>
        </skillRequirements>
        <researchPrerequisite>PlateArmor</researchPrerequisite>
      </recipeMaker>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldKite"]/costStuffCount</xpath>
    <value>
      <costStuffCount>120</costStuffCount>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DankPyon_ShieldKite"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>12000</WorkToMake>
        <MaxHitPoints>200</MaxHitPoints>
        <Mass>6</Mass>
        <StuffEffectMultiplierArmor>0.44</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>2.5</EquipDelay>
        <Flammability>1.0</Flammability>
      </statBases>
    </value>
  </Operation>
</Patch>