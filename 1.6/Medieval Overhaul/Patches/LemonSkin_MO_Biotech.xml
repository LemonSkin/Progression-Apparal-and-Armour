<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Biotech integration -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biotech</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Quiver"]/statBases/WorkToMake</xpath>
          <value>
            <WorkToMake>3500</WorkToMake>
          </value>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Quiver"]/statBases/VEF_RangedCooldownFactor</xpath>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Quiver"]</xpath>
          <value>
            <equippedStatOffsets>
              <RangedCooldownFactor>-0.05</RangedCooldownFactor>
            </equippedStatOffsets>
          </value>
        </li>
        <!-- <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Quiver"]/apparel/layers/li[.="Belt"]</xpath>
          <value>
            <li>Shell</li>
          </value>
        </li> -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Apparel_Quiver"]/apparel/bodyPartGroups/li[.="Shoulders"]</xpath>
          <value>
            <li>Torso</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
