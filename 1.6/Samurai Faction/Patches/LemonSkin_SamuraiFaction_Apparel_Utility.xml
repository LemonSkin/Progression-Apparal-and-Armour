<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- TSFApparel_SashimonoBanner -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TSFApparel_SashimonoBanner"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <PainShockThreshold>0.1</PainShockThreshold>
      </equippedStatOffsets>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TSFApparel_SashimonoBanner"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_MedievalUtility</li>
      </thingCategories>
    </value>
  </Operation>
  <!-- TSFApparel_SmokeBomb -->
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="DankPyon_Coal"]</xpath>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="TSFApparel_SmokeBomb"]/costList</xpath>
      <value>
        <costList>
          <Steel>5</Steel>
          <DankPyon_Coal>5</DankPyon_Coal>
        </costList>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TSFApparel_SmokeBomb"]/statBases</xpath>
    <value>
      <statBases>
        <WorkToMake>1200</WorkToMake>
        <Mass>1</Mass>
        <PackRadius>4</PackRadius>
        <EquipDelay>1</EquipDelay>
        <MaxHitPoints>25</MaxHitPoints>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="TSFApparel_SmokeBomb"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_MedievalUtility</li>
      </thingCategories>
    </value>
  </Operation>
</Patch>
