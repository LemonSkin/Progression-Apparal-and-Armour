<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Apparel_Bandolier -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/thingCategories</xpath>
    <value>
      <thingCategories>
        <li>LemonSkin_IndustrialApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <!-- Apparel_Sash -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_Sash"]/thingCategories</xpath>
    <value>
      <thingCategories>
        <li>LemonSkin_MedievalApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_Sash"]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
    </value>
  </Operation>
  <!-- Child shit -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="ChildApparelMakeableBase"]/thingCategories</xpath>
    <value>
      <thingCategories>
        <li>LemonSkin_KidApparel</li>
      </thingCategories>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_KidHelmet"]</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_KidArmorHeadgear</li>
      </thingCategories>
    </value>
  </Operation>
  <!-- Patch research technology -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_KidRomper"]/recipeMaker</xpath>
    <value>
      <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
    </value>
  </Operation>
</Patch>
