<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Robe"]/recipeMaker</xpath>
    <value>
      <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
    </value>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="Apparel_Cape"]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Apparel_Cape"]/recipeMaker</xpath>
      <value>
        <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_Parka"]/techLevel</xpath>
    <value>
      <techLevel>Industrial</techLevel>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Parka"]/recipeMaker</xpath>
    <value>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </value>
  </Operation>
  <!-- ApparelArmorPowerBase -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="ApparelArmorPowerBase"]/thingCategories</xpath>
    <value>
      <thingCategories>
        <li>LemonSkin_SpacerArmor</li>
      </thingCategories>
    </value>
  </Operation>
  <!-- ApparelArmorReconBase -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="ApparelArmorReconBase"]/thingCategories</xpath>
    <value>
      <thingCategories>
        <li>LemonSkin_SpacerArmor</li>
      </thingCategories>
    </value>
  </Operation>
</Patch>
