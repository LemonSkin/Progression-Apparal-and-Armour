<?xml version="1.0" encoding="utf-8"?>
<Patch>


  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="BananaSuit_TheSuit"]/recipeMaker</xpath>
    <value>
      <recipeMaker>
        <recipeUsers Inherit="False">
          <li>Ferny_CostumingTable</li>
        </recipeUsers>
        <researchPrerequisite Inherit="False">Ferny_CostumingTable</researchPrerequisite>
      </recipeMaker>
    </value>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biotech</li>
    </mods>

    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="BananaSuit_TheKidSuit"]/recipeMaker</xpath>
      <value>
        <recipeMaker>
          <recipeUsers Inherit="False">
            <li>Ferny_CostumingTable</li>
          </recipeUsers>
          <researchPrerequisite Inherit="False">Ferny_CostumingTable</researchPrerequisite>
        </recipeMaker>
      </value>
    </match>
  </Operation>

</Patch>
