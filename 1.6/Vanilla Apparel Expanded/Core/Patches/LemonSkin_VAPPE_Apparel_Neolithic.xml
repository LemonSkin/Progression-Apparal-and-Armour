<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- VAE_Apparel_PeltCoat -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_PeltCoat"]/label</xpath>
    <value>
      <label>pelt coat</label>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_PeltCoat"]/statBases</xpath>
    <value>
      <statBases>
        <MaxHitPoints>160</MaxHitPoints>
        <WorkToMake>10000</WorkToMake>
        <Mass>3</Mass>
        <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.9</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>3</EquipDelay>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_PeltCoat"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_NeolithicApparel</li>
      </thingCategories>
    </value>
  </Operation>
