<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Medieval Overhaul Stuff -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/label</xpath>
          <value>
            <label>mittens</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/description</xpath>
          <value>
            <description>A simple pair of mittens.</description>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/techLevel</xpath>
          <value>
            <techLevel>Medieval</techLevel>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Apparel_Trousers"]/label</xpath>
          <value>
            <label>suit trousers</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
