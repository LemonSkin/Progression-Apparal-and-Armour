<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Patch leather armours -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEM2_Apparel_LeatherArmor" or 
      defName="VFEM2_Apparel_LeatherHelmet" or
      defName="VFEM2_Apparel_HeavyLeatherArmor" or
      defName="VFEM2_Apparel_HeavyLeatherHelmet"
      ]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisite>LemonSkin_LeatherArmour</researchPrerequisite>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEM2_Apparel_JesterHat" or
      defName="VFEM2_Apparel_JesterOutfit" or
      defName="VFEM2_Apparel_DameHat" or
      defName="VFEM2_Apparel_DameDress" or
      defName="VFEM2_Apparel_KingsRobes" or
      defName="VFEM2_Apparel_PaddedHelmet" or
      defName="VFEM2_Apparel_Cap" or
      defName="VFEM2_Apparel_PlagueMask" or
      defName="VFEM2_Apparel_Chaperon"
      ]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VFEM2_Apparel_KingsCrown"]/recipeMaker/researchPrerequisite</xpath>
    <value>
      <researchPrerequisites>
        <li>LemonSkin_RusticClothing</li>
        <li>Smithing</li>
      </researchPrerequisites>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedArmor" or 
      defName="VFEM2_Apparel_Mantle"
      ]/recipeMaker</xpath>
    <value>
      <researchPrerequisite>LemonSkin_RusticClothing</researchPrerequisite>
    </value>
  </Operation>
</Patch>
