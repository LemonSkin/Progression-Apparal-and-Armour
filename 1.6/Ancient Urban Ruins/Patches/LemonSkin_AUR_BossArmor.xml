<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- AM_CompFlakSuit - composite flak suit-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="AM_CompFlakSuit"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialArmor</li>
      </thingCategories>
    </value>
  </Operation>


  <!-- AM_FullyEnclosedHelmet - fully enclosed helmet-->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="AM_FullyEnclosedHelmet"]</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialArmorHeadgear</li>
      </thingCategories>
    </value>
  </Operation>


  <!-- AM_NightVisionHelmet - night vision helmet-->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="AM_NightVisionHelmet"]</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialArmorHeadgear</li>
      </thingCategories>
    </value>
  </Operation>


  <!-- AM_CataphractHelmetFashion - cataphract helmet "Fashion"-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="AM_CataphractHelmet"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_SpacerArmorHeadgear</li>
      </thingCategories>
    </value>
  </Operation>


  <!-- AM_ClosedOxygenCylinder - closed oxygen cylinder -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="AM_ClosedOxygenCylinder"]/thingCategories</xpath>
    <value>
      <thingCategories Inherit="False">
        <li>LemonSkin_IndustrialUtility</li>
      </thingCategories>
    </value>
  </Operation>
</Patch>