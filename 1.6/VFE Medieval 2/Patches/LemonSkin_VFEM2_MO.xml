<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PlateHelmetHeavy"]/recipeMaker/skillRequirements/Crafting</xpath>
          <value>
            <Crafting>10</Crafting>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PlateHelmetHeavy"]/recipeMaker/recipeUsers</xpath>
          <order>Append</order>
          <value>
            <li>DankPyon_Anvil</li>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PlateArmorHeavy"]/recipeMaker/skillRequirements/Crafting</xpath>
          <value>
            <Crafting>10</Crafting>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
          <value>
            <Crafting>2</Crafting>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedHelmet"]/statBases/WorkToMake</xpath>
          <value>
            <WorkToMake>1800</WorkToMake>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedHelmet"]/label</xpath>
          <value>
            <label>light padded helm</label>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedArmor"]/recipeMaker</xpath>
          <value>
            <skillRequirements>
              <Crafting>2</Crafting>
            </skillRequirements>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedArmor"]/statBases/WorkToMake</xpath>
          <value>
            <WorkToMake>1800</WorkToMake>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VFEM2_Apparel_PaddedArmor"]/label</xpath>
          <value>
            <label>light padded armor</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
